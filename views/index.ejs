        <script src="/javascripts/suggestions.js"></script>
    <script>

         
        gsap.to(".flip", {


            width: "0%",

            ease: Expo.easein,
            duration: "0.1",
            stagger: "0.1"

        })
        gsap.to(".flip", {
            width: "100%",
            ease: Expo.easein,
            stagger: "0.1",
            delay: ".1",
            backgroundColor: "transparent"
        })
        gsap.to(".detail", {
            opacity: "1",
