                        <div class="moreinfobox"><h4><%=data.clouds.all%></h4><i class="ri-cloud-line"></i><h5>Clouds</h5></div>
                        <div class="moreinfobox"><h4><%=data.main.humidity%> %</h4><i class="ri-water-flash-line"></i><h5>Humidity</h5></div>
                        <div class="moreinfobox"><h4><%=data.main.pressure%> Pa</h4><i class="ri-dashboard-2-line"></i><h5>Pressure</h5></div>
                        <div class="moreinfobox"><h4><%=data.visibility%></h4><i class="ri-eye-line"></i><h5>Visibility</h5></div>
                       
                    </div>
                    <%}%>
