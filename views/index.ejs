        <div class="main">
            <%if(data==null){%>

                <div class="left">
                    <div class="brand">
                        <!-- <small class="arrowinfo">tap for more info</small>
                        <i class="ri-arrow-down-s-fill arrow"></i>
                        <small class="backarrowinfo">tap for more info</small>
                        <i class="ri-arrow-down-s-fill backarrow"></i> -->
                        <h3>The WeatherApp</h3>
                    </div>
                    <div class="detail">

                        <h1 class="temp"> 28¬∞C</h1>
                        <div class="cityname">
                            <h1>Thiruvananthapuram</h1>
                            <small>
